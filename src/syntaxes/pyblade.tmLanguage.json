{
  "name": "PyBlade",
  "scopeName": "text.html.pyblade",
  "repository": {}, 
  "fileTypes": ["html", "pyblade"],
  "patterns": [
    {
      "include": "text.html.basic"
    },

    {
      "name": "comment.block.pyblade",
      "begin": "\\{#",
      "end": "#\\}"
    },

    {
      "begin": "@(if|elif|for|active|checked|selected|required|break|continue)\\(",
      "end": "\\)",
      "captures":{
        "0":{"name":"keyword.control.pyblade"}
      },
      "contentName": "source.python",
      "patterns": [
        {
          "include": "source.python"
        }
      ]

    },

    {
      "begin": "@(extends|yield|section|block|include)\\(",
      "end": "\\)",
      "captures":{
        "0":{"name":"keyword.control.pyblade"}
      },
      "patterns": [
        {
          "name": "string.quoted.single.pyblade",
          "match": "'[^']*'"
        },
        {
          "name": "string.quoted.double.pyblade",
          "match": "\"[^\"]*\""
        }
      ]
    },

    {
      "begin": "@(url|static|trans|translate|class|style|field|livebladeScripts|liveblade_scripts)\\(",
      "end": "\\)",
      "captures":{
        "0": {"name": "support.function.pyblade"}
      },
      "contentName": "source.python",
      "patterns": [
        {
          "include": "source.python"
        }
      ]
    },

    {
      "name": "keyword.control.pyblade",
      "match": "@(if|elif|else|unless|switch|case|for|break|continue|auth|guest|anonymous|required|selected|checked|active|static|extends|yield|section|block|include|endif|endfor|endswitch|endauth|endguest|endanonymous)"
    }
  ]
}
