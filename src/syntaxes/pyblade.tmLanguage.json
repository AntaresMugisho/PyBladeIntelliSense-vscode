{
  "name": "PyBlade",
  "scopeName": "text.html.pyblade",
  "repository": {}, 
  "fileTypes": ["html", "pyblade"],
  "patterns": [
    {
      "include": "text.html.basic"
    },

    {
      "name": "comment.block.pyblade",
      "begin": "\\{#",
      "end": "#\\}"
    },

    {
      "begin": "@(url|trans|translate|class|active|checked|selected|required|livebladeScripts|liveblade_scripts|break|continue)\\(",
      "end": "\\)",
      "captures":{
        "0": {"name": "support.function.pyblade"}
      },
      "contentName": "source.python",
      "patterns": [
        {
          "include": "source.python"
        }
      ]
    },

   

    {
      "name": "keyword.control.pyblade",
      "match": "@(if|elif|else|unless|switch|case|for|break|continue|auth|guest|anonymous|static|extends|yield|section|block|include|endif|endfor|endswitch|endauth|endguest|endanonymous)"
    }

  ]
}
