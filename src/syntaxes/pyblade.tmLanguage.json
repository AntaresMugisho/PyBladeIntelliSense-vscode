{
    "scopeName": "source.pyblade",
    "patterns": [
      {
        "name": "keyword.control.pyblade",
        "match": "@\\w+"
      },

      {
        "name": "comment.block.pyblade",
        "begin": "@\\*",
        "end": "\\*@"
      },
      
      {
        "name": "variable.other.pyblade",
        "match": "\\$\\w+"
      },

      {
        "include": "text.html.basic"
      }
    ],
    "repository": {},
    "fileTypes": ["pyblade"],
    "name": "PyBlade"
  }
  