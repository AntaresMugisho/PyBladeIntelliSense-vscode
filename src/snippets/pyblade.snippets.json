  },

  "Pyblade error": {
    "prefix": "error",
    "body": ["@error(${1:form.field_name})", "\t$0", "@enderror"],
    "description": "PyBlade @error directive"
  },



  "Pyblade block": {
    "prefix": "block",
    "body": ["@block(${1:'name'})", "\t$0", "@endblock"],
    "description": "PyBlade @block directive"
  },

  "Pyblade section": {
    "prefix": "section",
    "body": ["@section(${1:'name'})", "\t$0", "@endsection"],
    "description": "PyBlade @section directive"
  },

  "PyBlade include": {
    "prefix": "include",
    "body": ["@include(${1:'partial_path'})"],
    "description": "Insert a PyBlade @include directive"
  },

  "PyBlade yield": {
    "prefix": "yield",
    "body": ["@yield(${1:'block_name'})"],
