{
  "PyBlade if Statement": {
    "prefix": "if",
    "body": ["@if(${1:condition})", "\t$0", "@endif"],
    "description": "Insert a PyBlade @if statement"
  },

  "PyBlade elif": {
    "prefix": "elif",
    "body": ["@elif (${1:condition})", "\t$0"],
    "description": "PyBlade @elif directive"
  },

  "PyBlade if and else statement": {
    "prefix": "ifelse",
    "body": ["@if(${1:condition})", "\t$2", "@else", "\t$3", "@endif"],
    "description": "Insert a PyBlade @if ... @else statement"
  },

  "PyBlade if and elif Statement": {
    "prefix": "ifelif",
    "body": ["@if(${1:condition})", "\t$2", "@elif (${3:condition})", "\t$4", "@endif"],
    "description": "Insert a PyBlade @if ... @elif statement"
  },

  "PyBlade if, elif and else Statement": {
    "prefix": "ifelifelse",
    "body": ["@if(${1:condition})", "\t$2", "@elif (${3:condition})", "\t$4", "@else", "\t$5", "@endif"],
    "description": "Insert a PyBlade @if ... @elif ... @else statement"
  },

  "PyBlade else": {
    "prefix": "else",
    "body": ["@else", "\t$0"],
    "description": "PyBlade @else directive"
  },


  "PyBlade switch statement": {
    "prefix": "switch",
    "body": ["@switch(${1:variable})", "\t@case(${2:value})", "\t\t$3", "\t@default", "\t\t$4","@endswitch"],
    "description": "PyBlade @witch directive"
  },

  "PyBlade case statement": {
    "prefix": "case",
    "body": ["@case(${1:value})", "\t$0"],
    "description": "PyBlade @case directive"
  },

  "PyBlade default statement": {
    "prefix": "default",
    "body": ["@default(${1:value})", "\t$0"],
    "description": "PyBlade @default directive"
  },

  "PyBlade auth": {
    "prefix": "auth",
    "body": ["@auth", "\t$0", "@endauth"],
    "description": "PyBlade @auth directive"
  },

  "PyBlade auth else": {
    "prefix": "auth",
    "body": ["@auth", "\t$0", "@else", "\t$1", "@endauth"],
    "description": "PyBlade @auth directive"
  },

  "PyBlade guest": {
    "prefix": "guest",
    "body": ["@guest", "\t$0", "@endguest"],
    "description": "PyBlade @guest directive"
  },

  "PyBlade guest else": {
    "prefix": "guest",
    "body": ["@guest", "\t$0", "@else", "\t$1", "@endguest"],
    "description": "PyBlade @guest directive"
  },

  "PyBlade active class": {
    "prefix": "active",
    "body": ["@active(${1:condition})"],
    "description": "PyBlade @ctive directive"
  },

  "Pyblade checked directive": {
    "prefix": "checked",
    "body": ["@checked(${1:condition})"],
    "description": "PyBlade @checked directive"
  },

  "PyBlade required": {
    "prefix": "required",
    "body": ["@required(${1:condition})"],
    "description": "PyBlade @required directive"
  },

  "PyBlade selected": {
    "prefix": "selected",
    "body": ["@selected(${1:condition})"],
    "description": "PyBlade @selected directive"
  },

  "Pyblade class": {
    "prefix": "class",
    "body": ["@class({${1:'class_name':condition}})"],
    "description": "PyBlade @class directive"
  },

  "PyBlade style": {
    "prefix": "style",
    "body": ["@style({${1:'css_property:value;':condition}})"],
    "description": "PyBlade @style directive"
  },

  "Pyblade props": {
    "prefix": "props",
    "body": ["@props({${1:'variable':'value'}})"],
    "description": "PyBlade @props directive"
  },



  "PyBlade for Loop": {
    "prefix": "for",
    "body": ["@for(${1:variable} in ${2:iterable})", "\t$0", "@endfor"],
    "description": "Insert a PyBlade @for loop"
  },

  "PyBlade empty loop": {
    "prefix": "empty",
    "body": ["@empty", "\t$0"],
    "description": "PyBlade @empty loop directive"
  },

  "PyBlade for empty loop": {
    "prefix": "forempty",
    "body": ["@for(${1:variable} in ${2:iterable})", "\t$0", "@empty", "\t$1", "@endfor"],
    "description": "PyBlade @for ... @empty loop directive"
  },

  "PyBlade break directive": {
    "prefix": "break",
    "body": ["@break"],
    "description": "PyBlade @break directive"
  },

  "PyBlade continue directive": {
    "prefix": "continue",
    "body": ["@continue"],
    "description": "PyBlade @continue directive"
  },



  "PyBlade url": {
    "prefix": "url",
    "body": ["@url(${1:'name'})"],
    "description": "PyBlade @url directive"
  },

  "PyBlade static": {
    "prefix": "static",
    "body": ["@static(${1:'path'})"],
    "description": "PyBlade @static directive"
  },

  "trans": {
    "prefix": "trans",
    "body": ["@trans(${1:'message'})"],
    "description": "PyBlade @translate directive (short)"
  },

  "translate": {
    "prefix": "translate",
    "body": ["@translate(${1:'message'})"],
    "description": "PyBlade @translate directive (long)"
  },

  "PyBlade csrf": {
    "prefix": "csrf",
    "body": ["@csrf"],
    "description": "PyBlade @scrf directive"
  },

  "PyBlademethod": {
    "prefix": "method",
    "body": ["@method(${1:'HTTP_METHOD'})"],
    "description": "PyBlade @method directive"
  },

  "PyBlade field": {
    "prefix": "field",
    "body": ["@field(${1:form.field_name})"],
