{
  "name": "pyblade-intellisense",
  "displayName": "PyBlade Intellisense",
  "description": "PyBlade Intellisense provides tools like syntax highlighting, code snippets, and validation to enhance development with PyBlade templates across editors and IDEs.",
  "version": "0.0.1",
  "publisher": "antares",
  "author": {
      "name": "Antares Mugisho",
      "email": "antaresmugisho@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.54.0"
  },
  "keywords": [
    "pyblade",
    "python",
    "django",
    "flask",
    "highlighter"
  ],
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pyblade-intellisense.helloWorld",
        "title": "Hello World"
      }
    ],

    "languages": [
      {
        "id": "pyblade",
        "aliases": ["PyBlade", "pyblade"],
        "extensions": [".pyblade"],
        "configuration": "./src/languages/pyblade.configuration.json"
      }
    ],

    "grammars": [
      {
        "language": "pyblade",
        "scopeName": "source.pyblade",
        "path": "./src/syntaxes/pyblade.tmLanguage.json"
      }
    ],

    "snippets": [
      {
        "language": "pyblade",
        "path": "./src/snippets/pyblade.code-snippets"
      }
    ],

    "configurationDefaults": {
      "emmet.includeLanguages": {
        "pyblade": "html"
      }
  }
  },

  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
